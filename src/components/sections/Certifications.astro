---
import { getJsonCV } from "@/utils";

const { certificates } = getJsonCV();
---

<section>
	<h2>Certifications</h2>
	{
		certificates.map(({ issuedBy, name, date, url }: any) => (
			<div class="flex flex-col border-b border-gray-100 pb-4">
				<div class="flex gap-2 flex-col sm:flex-row">
					<p>
						[ <time class="opacity-85 font-bold">{date}</time> ]
					</p>
					<h3 class="opacity-80">{name}</h3>
				</div>
				<div class="flex justify-between">
					<span class="tracking-widest">{issuedBy}</span>
					<a href={url} target="_blank" rel="noopener noreferrer">
						view
					</a>
				</div>
			</div>
		))
	}
</section>
