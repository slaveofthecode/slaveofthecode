---
import { ui } from "../../i18n/ui";
import { useTranslations } from "../../i18n/utils";

const { lang } = Astro.params;
const t = useTranslations(lang as keyof typeof ui);

const { education } = t("resume") as any;
---

<section>
	<h1>{t("section.education")}</h1>
	{
		education.map(({ institution, date, area }: any) => (
			<>
				<div class="flex justify-between items-start flex-col-reverse sm:flex-row sm:items-center">
					<h2>
						<strong class="opacity-60 text-sm me-2">
							{institution.abbreviation}
						</strong>
						{institution.name}
					</h2>
					<time class="text-gray-400 text-xs">
						{`${date.start} - ${date.end}`}
					</time>
				</div>
				<p>{area}</p>
			</>
		))
	}
</section>
